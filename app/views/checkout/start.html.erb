<%= title t('checkout.start.page_title'), :h2 %>

<%= render :partial => 'orders/order', :object => @order%>

<% form_for @order, :url => {:controller => "checkout", :action => "update_address"} do |f| %>
<%= f.error_messages %>
<div class="span-10 append-1">
<fieldset>
<legend><%= t('orders.common.billing_address') %></legend>
<% fields_for "order[billing_address_attributes]", @order.billing_address do |form| %>
<p style="float:left;">
<%= form.label :street_1 %><br />
<%= form.text_field :street_1, :size=>"40" %><br />
<%= form.text_field :street_2, :size=>"40" %>
</p>
<p style="float:left;">
<%= form.label :city %><br />
<%= form.text_field :city, :size=>"22" %>
</p>
<p style="float:left;">
<%= form.label :postal_code %><br />
<%= form.text_field :postal_code, :size=>"12" %>
</p>
<p style="float:left;">
<%= form.label :country %><br />
<%= form.collection_select :country_id, Country.all, :id, :name, { :prompt => true } %>
</p>
  <% unless form.object.new_record? %>
  <%= form.hidden_field :id %>(ID: <%= form.object.id %>)
  <% end %>
<% end %>
</fieldset>
</div>
<div class="span-10 last">
<fieldset>
<legend><%= t('orders.common.shipping_address') %></legend>
<% fields_for "order[shipping_address_attributes]", @order.shipping_address do |form| %>
<p style="float:left;">
<%= form.label :street_1 %><br />
<%= form.text_field :street_1, :size=>"40" %><br />
<%= form.text_field :street_2, :size=>"40" %>
</p>
<p style="float:left;">
<%= form.label :city %><br />
<%= form.text_field :city, :size=>"22" %>
</p>
<p style="float:left;">
<%= form.label :postal_code %><br />
<%= form.text_field :postal_code, :size=>"12" %>
</p>
<p style="float:left;">
<%= form.label :country %><br />
<%= form.collection_select :country_id, Country.all, :id, :name, { :prompt => true } %>
</p>
  <% unless form.object.new_record? %>
  <%= form.hidden_field :id %>(ID: <%= form.object.id %>)
  <% end %>
<% end %>
</fieldset>
</div>
<div class="prepend-9 span-13 last">
<%= f.submit t('checkout.start.next_page_button') %>
</div>
<% end %>

<hr class="plain"/>
<p class="right"><%= link_to t('checkout.common.shopping_link'), root_url %></p>
