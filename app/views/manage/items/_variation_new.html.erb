<div class="left variation">
  <div class="span-1">
  <br />
  <input id="item_variations_attributes__position" name="item[variations_attributes][][position]" size="1" type="text" value="1" />
  </div>
  <div class="span-3">
  <label for="item_variations_attributes__code"><%= t('product.code') %></label><br />
  <input id="item_variations_attributes__code" name="item[variations_attributes][][code]" size="10" type="text" />
  </div>
  <div class="span-5">
  <label for="item_variations_attributes__name"><%= t('product.name') %></label><br />
  <input id="item_variations_attributes__name" name="item[variations_attributes][][name]" size="25" type="text" />
  </div>
  <div class="span-4">
  <label for="item_variations_attributes__price"><%= t('product.price') %></label><br />
  <input id="item_variations_attributes__currency_code" name="item[variations_attributes][][currency_code]" readonly="readonly" size="3" type="text" value="<%= APP_CONFIG[:currency] %>" />
  <input id="item_variations_attributes__price" name="item[variations_attributes][][price]" size="6" style="direction: rtl;" type="text" value="0.0" />
  </div>
  <div class="span-3">
      <br/><b><%= t('product.not_published') %></b>
  </div>
  <div class="span-1">
  <br />
  <a href="#" class="remove_variation_new"><%= t('manage.products.common.remove') %></a>
  </div>
</div>

