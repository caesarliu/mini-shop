<% item = acomponent.item %>
<div class="component left width-100">
<div class="left width-100">
  <% picture = item.get_first_picture if item %>
  <% if picture %>
  <div class="span-2">
    <%= image_tag picture.data.url(:tiny) %>
  </div>
  <% else %>
  <div class="span-2" style="border: solid 1px red; height: 60px;">
    <b><%= t('product.no_picture') %></b>
  </div>
  <% end %>
  <div class="span-1">
    <%=h acomponent.position %>
  </div>
  <div class="span-2">
    <b><%= t('product.name') %></b><br />
    <%=h item.code %>
  </div>
  <div class="span-7">
    <b><%= t('product.name') %></b><br />
    <%=h item.display_name %>
  </div>
  <div class="span-3">
    &nbsp;<br />
    <%= show_product_link(item) %> | <%= edit_product_link(item) %>
  </div>
  <% unless item.is_published %>
  <div class="span-2">
    <b><%= t('product.not_published') %></b>
  </div>
  <% end %>
</div>
<% unless item.downloads.empty? %>
<div class="left width-100">
  <b><%= t('product.downloads') %>:</b>
  <% item.downloads.each do |download| %>
   &nbsp;&nbsp;&rarr;&nbsp;<%= h download.data_file_name %>&nbsp;
  <% end %>
</div>
<% end %>
</div>
